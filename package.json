{
  "name": "mugisha_react_boilerplate",
  "version": "1.0.1",
  "description": "A front-end React application with a test suite in Enzyme and Jest",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode-development",
    "build": "webpack -p",
    "test": "jest --watch --setupFiles ./src/test/setupTests.js",
    "coverage": "jest --setupFiles ./src/test/setupTests.js --coverage --watchAll=false"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "author": "MugishaU",
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "babel-jest": "^26.2.2",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.2.2",
    "sinon": "^9.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
